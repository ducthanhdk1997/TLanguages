<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_padding"
    android:layout_marginTop="@dimen/item_margin_top"
    android:background="@drawable/border_group_content"
    android:weightSum="10"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvWord"
            android:padding="@dimen/item_padding"
            android:textSize="@dimen/item_text_title_size"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/tvMainMean"
            android:padding="@dimen/item_padding"
            android:textSize="@dimen/item_text_title_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/tvSubMean"
            android:padding="@dimen/item_padding"
            android:textSize="@dimen/item_text_title_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="wrap_content"
            android:background="#fff"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_volume_up_32"
            android:layout_height="match_parent">
        </ImageButton>
    </RelativeLayout>
</LinearLayout>