<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.example.tlanguage.viewmodel.ChoosingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".view.fragment.ChoosingFragment"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:id="@+id/ver_centrer"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        </androidx.constraintlayout.widget.Guideline>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/item_margin"
            android:layout_marginRight="@dimen/item_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/header"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="70dp"
                android:layout_gravity="center"
                android:text="1/10"
                android:id="@+id/tv_choosing_count"
                android:layout_height="50dp">
            </TextView>
            <TextView
                android:textSize="30dp"
                android:textColor="@color/success"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:text="viet nam"
                android:layout_gravity="center"
                android:id="@+id/tv_choosing_mean"
                android:layout_height="80dp">
            </TextView>

        </LinearLayout>

        <TextView
            android:background="#D8E3E8"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/item_answer_margin_top"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintRight_toRightOf="@id/ver_centrer"
            android:layout_marginRight="@dimen/item_answer_margin_right"
            android:id="@+id/btn_answer_1"
            android:text="1"
            android:layout_height="0dp"
            height="@{viewModel.itemAnswerHeight}"
            width="@{viewModel.itemAnswerWidth}">

        </TextView>

        <TextView
            android:layout_marginTop="@dimen/item_answer_margin_top"
            android:background="#D8E3E8"
            android:layout_width="0dp"
            android:id="@+id/btn_answer_2"
            android:text="2"
            app:layout_constraintTop_toBottomOf="@id/btn_answer_1"
            app:layout_constraintRight_toRightOf="@id/ver_centrer"
            android:layout_marginRight="@dimen/item_answer_margin_right"
            android:layout_height="0dp"
            height="@{viewModel.itemAnswerHeight}"
            width="@{viewModel.itemAnswerWidth}">

        </TextView>

        <TextView
            android:layout_marginTop="@dimen/item_answer_margin_top"
            android:background="#D8E3E8"
            android:layout_width="0dp"
            android:id="@+id/btn_answer_3"
            android:text="3"
            app:layout_constraintTop_toBottomOf="@id/btn_answer_2"
            app:layout_constraintRight_toRightOf="@id/ver_centrer"
            android:layout_marginRight="@dimen/item_answer_margin_right"
            android:layout_height="0dp"
            height="@{viewModel.itemAnswerHeight}"
            width="@{viewModel.itemAnswerWidth}">

        </TextView>

        <TextView
            android:background="#D8E3E8"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/item_answer_margin_top"
            android:id="@+id/btn_answer_4"
            android:text="4"
            app:layout_constraintLeft_toLeftOf="@id/ver_centrer"
            app:layout_constraintTop_toBottomOf="@id/header"
            android:layout_marginLeft="@dimen/item_answer_margin_left"
            android:layout_height="0dp"
            height="@{viewModel.itemAnswerHeight}"
            width="@{viewModel.itemAnswerWidth}">

        </TextView>

        <TextView
            android:layout_marginTop="@dimen/item_answer_margin_top"
            android:background="#D8E3E8"
            android:layout_width="0dp"
            android:id="@+id/btn_answer_5"
            android:text="5"
            app:layout_constraintLeft_toLeftOf="@id/ver_centrer"
            app:layout_constraintTop_toBottomOf="@id/btn_answer_4"
            android:layout_marginLeft="@dimen/item_answer_margin_left"
            android:layout_height="0dp"
            height="@{viewModel.itemAnswerHeight}"
            width="@{viewModel.itemAnswerWidth}">

        </TextView>

        <TextView
            android:layout_marginTop="@dimen/item_answer_margin_top"
            android:background="#D8E3E8"
            android:layout_width="0dp"
            android:id="@+id/btn_answer_6"
            android:text="6"
            app:layout_constraintLeft_toLeftOf="@id/ver_centrer"
            app:layout_constraintTop_toBottomOf="@id/btn_answer_5"
            android:layout_marginLeft="@dimen/item_answer_margin_left"
            android:layout_height="0dp"
            height="@{viewModel.itemAnswerHeight}"
            width="@{viewModel.itemAnswerWidth}">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>