<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.example.tlanguage.viewmodel.FooterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragment.FooterFragment">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:id="@+id/footer_vertical_center"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="0dp"
            app:setWidth="@{viewModel.buttonWidth}"
            android:id="@+id/btnExercise"
            android:text="@string/exercise"
            android:onClick="@{(view) -> viewModel.onClick(view)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/footer_vertical_center"
            android:layout_height="45dp"/>

        <Button
            android:layout_width="0dp"
            app:setWidth="@{viewModel.buttonWidth}"
            android:id="@+id/btnHardWord"
            android:text="@string/hard_word"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="@{(view) -> viewModel.onClick(view)}"
            app:layout_constraintStart_toEndOf="@+id/footer_vertical_center"
            android:layout_height="45dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>