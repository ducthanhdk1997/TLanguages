<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.tlanguage.viewmodel.HeaderFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".HeaderFragment">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:id="@+id/guiBottom"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.80"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/text_header"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guiBottom"
            android:text="@{viewModel.content}" />

        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/btnHeaderAdd"
            android:text="Test"
            android:padding="2dp"
            app:layout_constraintTop_toBottomOf="@+id/guiBottom"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_baseline_add_32"
            android:background="@color/background"
            android:tint="@color/item_tint"
            android:importantForAutofill="auto"
            android:onClick="@{(view) -> viewModel.onItemsClick(view)}"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
