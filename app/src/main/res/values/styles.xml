<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.Title">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="colorAccent">@color/base_background</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="personal_collapsed_title">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/collapsing_title</item>
    </style>
    <style name="personal_expanded_title">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/collapsing_title_expanded</item>
    </style>

</resources>